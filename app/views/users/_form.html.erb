<% if @user.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for @user do |f| %>
  <p>
    <%= f.text_field :username, placeholder: "enter username", autofocus: true %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.email_field :email, placeholder: "enter email" %>
  </p>
  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: "enter password" %>
  </p>
  <p>
    <%= f.submit "sign up", class: "btn btn-primary" %>
  </p>
<% end %>
